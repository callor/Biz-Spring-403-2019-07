	text-align:center;
	border-radius: 5px;
	
	display: flex;
	justify-content: center;
	align-items: center;
	
}

div.drag_box h3 {
	display: inline-block;
}

div.drag_box:hover {
	background-color: #ccc;
	cursor: pointer;
}

div.image_box {
	display: flex;
	flex-flow: wrap;
}

img.image {
	width:100px;
	height: 100px;
	margin:5px;
}

.in-box-error {
	display: inline-block;
	margin-left: 20px;
	font-size:12px;
	color:red;
}

div.in-box iframe {
	margin-left:18px;
}

</style>
