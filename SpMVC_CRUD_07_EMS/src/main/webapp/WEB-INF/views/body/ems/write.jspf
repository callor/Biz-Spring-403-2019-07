<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core"  prefix="c" %>
<%@ taglib 
		uri="http://www.springframework.org/tags/form" 
		prefix="form" %>
<script src="${rootPath}/resources/se2/js/service/HuskyEZCreator.js"></script>		
<script>
$(function(){

	var oEditors = [];
	nhn.husky.EZCreator.createInIFrame({
	 	oAppRef: oEditors,
	 	elPlaceHolder: "ems_content",
	 	sSkinURI: "${rootPath}/resources/se2/SmartEditor2Skin.html",
	 	fCreator: "createSEditor2"
	})
	
	$("#btn-send").click(function(){
		oEditors.getById["ems_content"].exec("UPDATE_CONTENTS_FIELD",[])
		$("form").submit();
	})
	
	
	$(".image-item").click(function(){
		
		let file_seq = $(this).attr("data-seq")
		let file_tag = $(this)
		
		if(confirm("이미지를 삭제할까요?")) {
			$.ajax({
				url : '${rootPath}/ajax_file/file_delete?file_seq=' + file_seq,
				method : 'GET'
			})
			.done(function(result){
				if(result == "OK") {
					// done에서 this는 대상이 ajax가 되어서
					// img를 삭제하려고 하는데
					// 엉뚱한 곳을 가리키게 된다.
					// $(this).remove()
					$(file_tag).remove()
				} else if(result == "FAIL") {
					alert("파일을 삭제할수 없습니다")
				}
			})
			.fail(function(){
				alert("서버 오류 발생")
			})
		}
	})

	
})


</script>
<style>
div.drag_box {
	width:60%;
	height: 200px;
